{
  "env": {
    "browser": true,
    "es6": true
  },
  "ignorePatterns": ["dist/**/*.js"],
  "extends": ["eslint:recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "no-undef": "off",
    "no-console": "warn",
    "index": "off"
  }
}
